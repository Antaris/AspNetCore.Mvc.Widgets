{
  "version": "1.0.0-*",
  "description": "Provides a Widget execution model for ASP.NET Core MVC applications.",
  "title": "ASP.NET Core MVC Widgets",

  "packOptions": {
    "summary": "Provides an alternative execution model to ViewComponents using self-contained Widgets",
    "tags": [ "viewcomponents", "widgets", "aspnetcore", "aspnetcoremvc" ],
    "owners": [ "Matthew Abbott" ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Antaris/AspNetCore.Mvc.Widgets"
    }
  },

  "dependencies": {
    "Microsoft.AspNetCore.Mvc.Core": "1.0.0-rc2-final",
    "Microsoft.AspNetCore.Mvc.ViewFeatures": "1.0.0-rc2-final",
    "Microsoft.Extensions.PropertyActivator.Sources": {
      "version": "1.0.0-*",
      "type": "build"
    },
    "Microsoft.Extensions.PropertyHelper.Sources": {
      "version": "1.0.0-*",
      "type": "build"
    }
  },

  "frameworks": {
    "netstandard1.5": {
      "imports": [
        "dnxcore50",
        "portable-net452+win81"
      ]
    }
